# Hugging Face token for downloading models
# Get your token from https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Hugging Face Model IDs - these are the core model identifiers
HF_MODEL_ID=meta-llama/Llama-3.2-1B-Instruct
HF_EMBEDDING_MODEL_ID=sentence-transformers/all-MiniLM-L6-v2
HF_RERANKER_MODEL_ID=cross-encoder/ms-marco-MiniLM-L-6-v2

# Vector database settings
VECTOR_DB_HOST=vector-db
VECTOR_DB_PORT=6333

# Model paths - these will be derived from model IDs in the code
# The paths below are for reference but will be overridden by the code
MODEL_PATH=/model_server/models/llm/Llama-3.2-1B-Instruct
EMBEDDING_MODEL_PATH=/model_server/models/embedding/all-MiniLM-L6-v2
RERANKER_MODEL_PATH=/model_server/models/reranker/ms-marco-MiniLM-L-6-v2

# Flask settings
FLASK_APP=app.py
FLASK_DEBUG=1
FLASK_SECRET_KEY=change-this-in-production

# Timeout settings
TIMEOUT_SECONDS=60
MAX_RETRIES=3
RETRY_DELAY=1

# PlantUML settings
# Path to the PlantUML JAR file - adjust based on your installation
PLANTUML_JAR=/path/to/plantuml.jar 